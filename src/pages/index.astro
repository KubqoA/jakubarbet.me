---
import BaseLayout from '../layouts/BaseLayout.astro'
import ExternalLink from '../components/ExternalLink.astro'

const birthday = new Date('2000-08-15')
const age = Math.floor((Date.now() - birthday.getTime()) / (365.25 * 24 * 60 * 60 * 1000))
---

<BaseLayout>
  <p class="mb-4 font-sans text-lg leading-8 md:mb-2 md:text-xl md:leading-8">
    Hi ðŸ‘‹, I'm {age}, and currently working as Full Stack Engineer at
    <ExternalLink href="https://betterstack.com" class="text-[#5B63D3]" iconClass="text-[#5B63D3]"
      >Better Stack</ExternalLink
    >.
  </p>
  <p class="font-sans text-lg leading-8 md:text-xl">
    I also love <a
      href="/photography/"
      class="bg-gradient-to-r from-teal-600 to-emerald-600 bg-clip-text text-transparent">photography</a
    >, creating <ExternalLink
      href="https://soundcloud.com/jakub-arbet"
      class="bg-gradient-to-r from-amber-500 to-amber-600 bg-clip-text text-transparent"
      iconClass="text-amber-600">music</ExternalLink
    >, and occassionally <a
      href="/writing/"
      class="bg-gradient-to-r from-pink-600 to-pink-500 bg-clip-text text-transparent">writing</a
    > about things I find interesting.
  </p>
</BaseLayout>
